{%- load_yaml as base_defaults %}

Debian:
  pkgs:
  - openjdk-8-jre-headless
  - logstash
  service: logstash
  version: '5'
  port: 5601
  server_name: logstash
  server_host: "0.0.0.0"
  elasticsearch_hosts: "http://localhost:9200"

RedHat:
  pkgs:
  - java-1.8.0-openjdk
  - logstash
  service: logstash
  version: '5'
  port: 5601
  server_name: logstash
  server_host: "0.0.0.0"
  elasticsearch_hosts: "http://localhost:9200"

default:
  version: 5

{%- endload %}

{%- set logstash = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('logstash:server'), base='default') %}


{% set ip_elasticsearch = salt[minion_id]['network.ip_addrs']('enp0s8')[0] %}